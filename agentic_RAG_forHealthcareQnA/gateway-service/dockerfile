# Use an official lightweight Python image
FROM python:3.11-slim

# Prevent Python from writing pyc files and buffering stdout
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# Set the working directory in the container
WORKDIR /app

# Install only whatâ€™s necessary (remove bloat like dnsutils unless needed)
RUN apt-get update && apt-get install -y --no-install-recommends \
    libgssapi-krb5-2 \
 && rm -rf /var/lib/apt/lists/*

# Copy requirements first for caching
COPY gateway-service/requirements.txt /app/

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy service code
COPY gateway-service/gateway_service.py /app/

# Expose FastAPI port
EXPOSE 8000

# Run the gateway service
CMD ["uvicorn", "gateway_service:app", "--host", "0.0.0.0", "--port", "8000"]
