# Lightweight Python base
FROM python:3.11-slim

# Prevent .pyc files & enable unbuffered logs
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONFAULTHANDLER=1

# Working directory
WORKDIR /app

# System packages required for motor + TLS CA certificates for MongoDB Atlas
RUN apt-get update && apt-get install -y --no-install-recommends \
        libgssapi-krb5-2 \
        ca-certificates \
    && update-ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first (for caching)
COPY gateway-service/requirements.txt /app/requirements.txt

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY gateway-service/gateway_service.py /app/gateway_service.py

# Default env vars (override via docker-compose)
ENV RAG_SERVICE_URL="http://rag-service:8002/ask" \
    ADMIN_API_KEY="changeme"

# Expose FastAPI port
EXPOSE 8000

# Create non-root user and fix permissions
RUN useradd -m appuser && chown -R appuser /app
USER appuser

# Start server
CMD ["uvicorn", "gateway_service:app", "--host", "0.0.0.0", "--port", "8000"]
